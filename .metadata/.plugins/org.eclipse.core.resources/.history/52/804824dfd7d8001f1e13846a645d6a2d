package com.bptn.course.hello;

public class HelloWorld {

	public static void main(String[] args) {
		
		for(int i = 0; i <=5; i++) {
		    // The code inside of the for loop has been indented once, to the same depth: 
		    System.out.print("Hello World");
		    for(int i = 0; i <=4; i++) {
		        // Where there's code inside of a nested block, the code is further indented:
		        System.out.print("Hello from the nested block");
		    }
		}
		//System.out.println("Hello World!");
		
	}

}
